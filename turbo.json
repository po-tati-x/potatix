{
  "$schema": "https://turbo.build/schema.json",
  "ui": "tui",
  "tasks": {
    "dev": {
      "persistent": true,
      "cache": false
    },
    "clean": {
      "cache": false
    },
    "build": {
      "dependsOn": ["^build"],
      "inputs": ["$TURBO_DEFAULT$", ".env*"],
      "outputs": [
        "dist/**",
        ".next/**"
      ]
    },
    "auth:schema:generate": {
      "cache": false,
      "interactive": true,
      "outputs": ["../schema/src/schemas/**"]
    },
    "format": {
      "outputs": [".cache/.prettiercache"],
      "outputLogs": "new-only",
      "dependsOn": ["^format"]
    },
    "lint": {
      "outputs": [".cache/.eslintcache"],
      "dependsOn": ["^lint"]
    },
    "typecheck": {
      "outputs": [".cache/tsbuildinfo.json"],
      "dependsOn": ["^typecheck"]
    },
    "test": {
      "outputs": ["coverage/**"]
    },
    "push": {
      "cache": false
    },
    "start": {
      "dependsOn": ["build"],
      "outputs": ["dist/**"]
    },
    "studio": {
      "cache": false,
      "persistent": true
    }
  },
  "globalEnv": ["DB_*"],
  "globalPassThroughEnv": ["NODE_ENV", "CI", "npm_lifecycle_event"]
}
